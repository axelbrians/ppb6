<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:id="@+id/item_contact_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp">

        <TextView
            android:id="@+id/item_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini Nama"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08xxxxxx"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_contact_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_delete_24"/>
            <Space
                android:layout_width="24dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/item_contact_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_edit_24"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>